# Uncomment this line to define a global platform for your project
# Uncomment this line if you're using Swift
use_frameworks!

def common_pods 

pod 'BrickRequest', '~> 0.4.0'
pod 'SwiftyJSON', '~> 2.3.1'
pod 'RxSwift', '~> 2.3.1'

end

target 'RESTRequest iOS' do
platform :ios, '8.0'
common_pods
end

=begin
target 'RESTRequest OSX' do
platform :osx, '10.9'
common_pods
end
=end

target 'RESTRequest watchOS' do
platform :watchos, '2.0'
common_pods
end

target 'RESTRequest tvOS' do
platform :tvos, '9.0'
common_pods
end

